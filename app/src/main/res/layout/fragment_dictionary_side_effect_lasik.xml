<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">


    <ImageView
        android:id="@+id/side_effect_lasik_title_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dictionary_content_background"
        android:layout_marginTop="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/side_effect_lasik_title_tv"/>
    <TextView
        android:id="@+id/side_effect_lasik_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="라식"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

        <!--        내용-->
        <ImageView
            android:id="@+id/side_effect_lasik_lifestyle_iv"
            android:layout_width="150dp"
            android:layout_height="23dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/side_effect_lifestyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/side_effect_lasik_title_tv"/>
        <TextView
            android:id="@+id/side_effect_lasik_lifestyle_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="ㆍ 간단한 운동(조깅 등)은 1주일 후 부터 가능\nㆍ 접촉이 많은 운동(축구, 수영 등)은 2달 후부터\n    권장\nㆍ 흡연 : 1주일 후부터 가능, 밀폐된 공간에서의 \n    흡연 자제\nㆍ 세안, 샤워, 머리감기는 3일 후 부터 가능\nㆍ 색조 화장은 1주일 후 부터 가능\nㆍ 아이라이너와 마스카라는 2주 후 부터 가능"
            android:textSize="15sp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            app:layout_constraintStart_toStartOf="@id/side_effect_lasik_lifestyle_iv"
            app:layout_constraintTop_toBottomOf="@id/side_effect_lasik_lifestyle_iv"/>
        <ImageView
            android:id="@+id/side_effect_lasik_electronics_iv"
            android:layout_width="150dp"
            android:layout_height="23dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/side_effect_electronics"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/side_effect_lasik_lifestyle_content_tv"/>
        <TextView
            android:id="@+id/side_effect_lasik_electronics_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="ㆍ 회복시간 없이 일상생활이 가능하지만 \n    50분 사용시 10분 휴식 권장
"
            android:textSize="15sp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            app:layout_constraintStart_toStartOf="@id/side_effect_lasik_electronics_iv"
            app:layout_constraintTop_toBottomOf="@id/side_effect_lasik_electronics_iv"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>