<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/operationFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/dictionary_operation_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp"
        android:layout_marginStart="30sp"
        android:text="@string/dictionary_operation_title"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dictionary_eyes_underbar"
        app:layout_constraintStart_toStartOf="@id/dictionary_operation_tv"
        app:layout_constraintEnd_toEndOf="@id/dictionary_operation_tv"
        app:layout_constraintBottom_toBottomOf="@id/dictionary_operation_tv"/>

    <ImageView
        android:id="@+id/dictionary_operation_laser_category_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:src="@drawable/dictionary_category_background"
        app:layout_constraintTop_toBottomOf="@+id/dictionary_operation_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/dictionary_operation_laser_category_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="레이저 종류"
        android:textColor="#282F20"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/dictionary_operation_laser_category_iv"
        app:layout_constraintEnd_toEndOf="@+id/dictionary_operation_laser_category_iv"
        app:layout_constraintTop_toTopOf="@+id/dictionary_operation_laser_category_iv"
        app:layout_constraintBottom_toBottomOf="@+id/dictionary_operation_laser_category_iv"/>

    <ImageView
        android:id="@+id/dictionary_operation_lasik_category_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/dictionary_category_background"
        app:layout_constraintTop_toBottomOf="@+id/dictionary_operation_laser_category_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/dictionary_operation_lasik_category_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="라식"
        android:textColor="#282F20"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/dictionary_operation_lasik_category_iv"
        app:layout_constraintEnd_toEndOf="@+id/dictionary_operation_lasik_category_iv"
        app:layout_constraintTop_toTopOf="@+id/dictionary_operation_lasik_category_iv"
        app:layout_constraintBottom_toBottomOf="@+id/dictionary_operation_lasik_category_iv"/>
    <ImageView
        android:id="@+id/dictionary_operation_lasek_category_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/dictionary_category_background"
        app:layout_constraintTop_toBottomOf="@+id/dictionary_operation_lasik_category_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/dictionary_operation_lasek_category_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="라섹"
        android:textColor="#282F20"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/dictionary_operation_lasek_category_iv"
        app:layout_constraintEnd_toEndOf="@+id/dictionary_operation_lasek_category_iv"
        app:layout_constraintTop_toTopOf="@+id/dictionary_operation_lasek_category_iv"
        app:layout_constraintBottom_toBottomOf="@+id/dictionary_operation_lasek_category_iv"/>
    <ImageView
        android:id="@+id/dictionary_operation_smile_category_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/dictionary_category_background"
        app:layout_constraintTop_toBottomOf="@+id/dictionary_operation_lasek_category_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/dictionary_operation_smile_category_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="스마일 라식"
        android:textColor="#282F20"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/dictionary_operation_smile_category_iv"
        app:layout_constraintEnd_toEndOf="@+id/dictionary_operation_smile_category_iv"
        app:layout_constraintTop_toTopOf="@+id/dictionary_operation_smile_category_iv"
        app:layout_constraintBottom_toBottomOf="@+id/dictionary_operation_smile_category_iv"/>
    <ImageView
        android:id="@+id/dictionary_operation_lens_category_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/dictionary_category_background"
        app:layout_constraintTop_toBottomOf="@+id/dictionary_operation_smile_category_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/dictionary_operation_lens_category_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="렌즈 삽입술"
        android:textColor="#282F20"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/dictionary_operation_lens_category_iv"
        app:layout_constraintEnd_toEndOf="@+id/dictionary_operation_lens_category_iv"
        app:layout_constraintTop_toTopOf="@+id/dictionary_operation_lens_category_iv"
        app:layout_constraintBottom_toBottomOf="@+id/dictionary_operation_lens_category_iv"/>


</androidx.constraintlayout.widget.ConstraintLayout>