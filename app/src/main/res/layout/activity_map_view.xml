<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.map.FindOphthalmologyActivity">

    <RelativeLayout
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#770000ff"
        android:textColor="#fff"
        android:padding="3dp"
        android:gravity="center"
        android:text="@string/menu_map"/>

    <ProgressBar
        android:id="@+id/map_loading_pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:indeterminateTint="@color/primary"
        android:visibility="gone"
        android:paddingBottom="1000dp"
        android:paddingTop="1000dp"
        android:paddingStart="1000dp"
        android:paddingEnd="1000dp"/>

</RelativeLayout>