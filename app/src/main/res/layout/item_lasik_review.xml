<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_lasik_review_cardView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="500dp"
        app:cardElevation="500dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:id="@+id/item_lasik_ophthalmology_img_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cat_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_lasik_ophthalmology_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="병원이름"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:maxLines="1"
        app:layout_constraintStart_toEndOf="@+id/item_lasik_review_cardView"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/item_lasik_ophthalmology_location_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="병원 위치"
        android:textColor="#a8a8a8"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/item_lasik_review_cardView"
        app:layout_constraintTop_toBottomOf="@id/item_lasik_ophthalmology_name_tv" />

    <RatingBar
        android:id="@+id/item_lasik_rating_rb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:numStars="5"
        android:rating="3.5"
        android:stepSize="0.5"
        app:layout_constraintStart_toEndOf="@id/item_lasik_review_cardView"
        app:layout_constraintTop_toBottomOf="@id/item_lasik_ophthalmology_location_tv" />

    <TextView
        android:id="@+id/item_lasik_ophthalmology_best_review_tv"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="3dp"
        android:text="설명 자세히 해수지고, 솔직히 많이 무서웠는데 시술 전부터 무섭지 않게 긴장을 풀어주셔서 너무 좋았어요."
        android:textColor="#a8a8a8"
        android:textSize="7sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_lasik_review_cardView"
        app:layout_constraintStart_toStartOf="@id/item_lasik_ophthalmology_location_tv"
        app:layout_constraintTop_toBottomOf="@id/item_lasik_rating_rb" />

</androidx.constraintlayout.widget.ConstraintLayout>